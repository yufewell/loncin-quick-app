<script>
import fetch from '@system.fetch'
import request from '../../lib/request'
export default {
    protected: {
        coupon_type: '1',
        page: 1,
        pagesize: 5,
        coupon_list: [],
        freshing: false,  
        hasMoreData: true,
        isLoadingData: false
    },
    onInit() {
        this.getList()
    },

    // 刷新
    onRefresh(evt) {
        this.freshing = evt.refreshing
        this.page = 1
        setTimeout(() => {
            this.freshing = false
            this.getList()
        }, 1000)
    },
   
    getList(doRender = false) {
        request.get(`coupon/list?coupon_type=${this.coupon_type}&page=${this.page}&pagesize=${this.pagesize}`).then(({ data }) => {
            const coupon_list = data.coupon_list || []
            if (!data) {
                if (doRender) {
                    this.hasMoreData = false
                    return
                }
            }
        if (!Array.isArray(coupon_list) || !coupon_list.length) {
            if (doRender) {
                setTimeout(() => {
                this.isMoreData = true
            }, 3000)
            return
            }
        }
        if (doRender) {
            this.coupon_list = this.coupon_list.concat(coupon_list)
        } else {
            this.coupon_list = coupon_list
        }})
    },

    /**
     * 滑动到底部时加载更多
     */
    renderMoreListItem () {
        if (!this.isLoadingData) {
            this.hasMoreData = true
            this.isMoreData = false
        }
        this.page++
        this.getList(true)
        setTimeout(() => {
            this.hasMoreData = false
        }, 500)
    },
}
</script>